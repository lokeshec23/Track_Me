{
    "builds": [
        {
            "src": "backend/vercel.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "frontend/build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/vercel.py"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ]
}